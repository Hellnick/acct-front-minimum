{
  "store.home": { 
    "blocks": [
      "list-context.product-list"
    ]
  },

  "list-context.product-list": {
    "blocks": ["product-summary.shelf"],
    "children":["slider-layout#summary"],
    "props":{
      "hideUnavailableItems":false,
      "maxItems":4,
      "category":"1"
    }
  },
  "slider-layout#summary":{
    "props":{
      "itemsPerPage": {
        "desktop": 4,
        "tablet": 2,
        "phone": 1
      },
      "infinite":true,
      "fullWidth": false
    }
  }
}